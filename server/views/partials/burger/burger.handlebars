<h2>BURGER PARTIAL!!!</h2>
{{this.burger_name}}

{{!-- FOR UPDATING BURGER FROM DB --}}
{{#if this.is_devoured}}
{{else}}
    <form action="/{{this.id}}?_method=PUT" method="POST">
        <input type="submit" value="EAT">
    </form>
{{/if}}

{{!-- FOR DELETING BURGER FROM DB --}}
<form action="/{{this.id}}?_method=DELETE" method="POST">
    <input type="submit" value="X">
</form>